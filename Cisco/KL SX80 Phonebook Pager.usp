Function RefreshPage()
{
	INTEGER i, j;

	i = nCurrent_Page * 5;

	For (j = 0 To 4) {
		Page_Names$[j + 1] = sNames$[i + j + 1];
	}

	Current_Page = nCurrent_Page + 1;

	If (Total_Pages = 0) {
		Total_Pages = 1;
	}

	Selected_Entry = 0;
}

