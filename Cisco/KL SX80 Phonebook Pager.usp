PUSH First_Page
{
	nCurrent_Page = 0;

	RefreshPage();
}

PUSH Next_Page
{
	nCurrent_Page = nCurrent_Page + 1;

	RefreshPage();
}

PUSH Previous_Page
{
	If (nCurrent_Page > 0) {
		nCurrent_Page = nCurrent_Page - 1;

		RefreshPage();
	}
}

PUSH Select_Entry
{
	Selected_Entry = nCurrent_Page * 5 + GetLastModifiedArrayIndex();
}

