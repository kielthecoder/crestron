CHANGE Phonebook_Names$
{
	INTEGER i, j;

	i = GetLastModifiedArrayIndex();

	sNames$[i] = Phonebook_Names$[i];

	j = i / 5 + 1;

	If (j > Total_Pages) {
		Total_Pages = j;
	}
}

